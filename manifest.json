{
  "manifest_version": 3,
  "name": "RateMySchedule",
  "version": "1.0.1",
  "description": "Extension for college students to help with their enrollment",
  "icons": {
    "16": "./icons/icon.png",
    "48": "./icons/icon.png",
    "128": "./icons/icon.png"
  },
  "permissions": ["sidePanel", "tabs", "activeTab", "scripting"],
  "content_scripts": [
    {
      "js": ["content-script.js"],
      "matches": ["https://enroll.wisc.edu/*"]
    }
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "side_panel": {
    "default_path": "rateMySchedule.html"
  },
  "action": {
    "default_title": "Activate RateMySchedule",
    "default_icon": {
      "16": "./icons/icon.png",
      "48": "./icons/icon.png",
      "128": "./icons/icon.png"
    }
  },
  "commands": { 
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+R", 
        "mac": "Command+R"
      }
    }
  }
}
