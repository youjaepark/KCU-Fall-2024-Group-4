{
  "manifest_version": 3,
  "name": "RateMySchedule",
  "version": "1.0.1",
  "description": "Extension for college students to help with their enrollment",
  "permissions": ["sidePanel", "tabs"],
  "content_scripts": [
    {
      "js": ["content-script.js"],
      "matches": ["https://enroll.wisc.edu/*"]
    }
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "Activate RateMySchedule"
  },
  "commands": { 
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+R", 
        "mac": "Command+R"
      }
    }
  }
}
